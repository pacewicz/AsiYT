<div id="wrapper" class="single-container">
  <div class="jumbotron">
    <h1>Hello, <%= user_signed_in? ? current_user.nick : "Stranger" %></h1>
    <p>
      <% if user_signed_in? %>
          <%= link_to 'My playlists', playlists_path, :class => 'btn btn-primary btn-lg', :role => 'button' %>
      <% else %>
          <%= link_to 'Sign in', new_user_session_path, :class => 'btn btn-primary btn-lg', :role => 'button' %>
          or
          <%= link_to 'Sign up', new_user_registration_path, :class => 'btn btn-lg', :role => 'button' %>
      <% end %>
    </p>
  </div>
</div>